#!/bin/bash

set -ex

case $OSTYPE in
  linux*)
    OS=linux
    # apt-get install -y libtinfo5
    # Vercel needs libtinfo5
    # yum install ncurses5-compat-libs -y

    ls -la /lib
    ln /lib/libtinfo.so.6 /lib/libtinfo.so.5
    ;;
  darwin*)
    OS=osx
    ;;
esac


curl https://static.lamdera.com/bin/$OS/lamdera -o bin/lamdera
chmod a+x bin/lamdera
ln -sf $PWD/bin/lamdera $PWD/node_modules/.bin/
